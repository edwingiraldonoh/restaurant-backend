# Path to your service account JSON downloaded from Firebase console
SERVICE_ACCOUNT_PATH=./serviceAccountKey.json
# Or set GOOGLE_APPLICATION_CREDENTIALS to the path
# GOOGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.json

# Simple API key used to protect the admin endpoint (change in production)
API_KEY=changeme123

# URL where the admin API will be listening (used by the CLI script)
API_URL=http://localhost:4001

# Port used by the API
PORT=4001

